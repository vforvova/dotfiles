#!/usr/bin/env sh

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          autofocus
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_opacity               on
yabai -m config window_opacity_duration      0.0
yabai -m config active_window_opacity        0.97
yabai -m config normal_window_opacity        0.85
yabai -m config window_shadow                off
yabai -m config insert_feedback_color        0xaad75f5f
yabai -m config window_border                off
yabai -m config window_border_width          4
yabai -m config active_window_border_color   0xcc9455f9
yabai -m config normal_window_border_color   0x009455f9
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               alt
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  12
yabai -m config bottom_padding               12
yabai -m config left_padding                 12
yabai -m config right_padding                12
yabai -m config window_gap                   12

# rules
yabai -m rule --add app='^Slack$' space=3
yabai -m rule --add app='^Telegram$' space=3

yabai -m rule --add app='^Reminders$' space=4
yabai -m rule --add app='^Notion$' space=4

yabai -m rule --add app='^Spark$' space=5
yabai -m rule --add app='^Calendar$' space=5
yabai -m rule --add app='^Home$' space=5

yabai -m rule --add app='^Music$' space=6

yabai -m rule --add app='^System Preferences$' manage=off

echo "yabai configuration loaded.."
